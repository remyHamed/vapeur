<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="5dp"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:padding="16dp">


            <ImageView
                android:id="@+id/header_image"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Classement :"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/header_image"
                android:textSize="12sp"
                android:fontFamily="@font/proxima_nova"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/header_image"
                android:fontFamily="@font/proxima_nova"
                android:layout_below="@+id/rank"
                android:text="jeu"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/publishers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/header_image"
                android:layout_below="@+id/name"
                android:text="editeur"
                android:textSize="12sp"
                android:fontFamily="@font/proxima_nova"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/header_image"
                android:layout_below="@+id/publishers"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:fontFamily="@font/proxima_nova"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/final_formatted"
                android:layout_toRightOf="@+id/header_image"
                android:layout_below="@+id/publishers"
                android:layout_marginTop="10dp"
                android:text="12â‚¬"
                android:textSize="12sp"
                android:fontFamily="@font/proxima_nova"/>

        </RelativeLayout>

        <Button
            android:id="@+id/button_item"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:background="@color/stime_blue"
            android:textColor="@color/black"
            android:fontFamily="@font/proxima_nova"
            android:textSize="18sp"
            android:text="@string/about"
            android:textAllCaps="false"
            android:layout_weight="1"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>